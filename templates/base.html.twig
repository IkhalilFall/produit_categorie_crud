<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Gestion Produits{% endblock %}</title>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>‚ö´Ô∏è</text><text y='1.3em' x='0.2em' font-size='76' fill='%23fff'>sf</text></svg>">

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="bg-light">

<!-- üî∑ NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold text-uppercase" href="{{ path('app_home') }}">
            <i class="bi bi-shop"></i> Gestion Produits
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
            <!-- Left menu -->
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">
                        <i class="bi bi-house"></i> Accueil
                    </a>
                </li>
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_produit_index') }}">
                            <i class="bi bi-box-seam"></i> Produits
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_categorie_index') }}">
                            <i class="bi bi-tags"></i> Cat√©gories
                        </a>
                    </li>
                    <li class="nav-item position-relative">
                        <a class="nav-link" href="{{ path('app_panier') }}">
                            <i class="bi bi-cart4"></i> Panier
                            {# Affichage du badge panier si l'utilisateur est connect√© #}
                            {% set cartCount = app.user ? app.user.cartItems|length : 0 %}
                            {% if cartCount > 0 %}
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark">
                                    {{ cartCount }}
                                </span>
                            {% endif %}
                        </a>
                    </li>
                {% endif %}
            </ul>

            <!-- Right menu -->
            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> {{ app.user.email }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a class="dropdown-item" href="{{ path('app_produit_new') }}">
                                    <i class="bi bi-plus-circle"></i> Nouveau Produit
                                </a></li>
                                <li><a class="dropdown-item" href="{{ path('app_categorie_new') }}">
                                    <i class="bi bi-plus-circle"></i> Nouvelle Cat√©gorie
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                            {% endif %}
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                <i class="bi bi-box-arrow-right"></i> D√©connexion
                            </a></li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">
                            <i class="bi bi-box-arrow-in-right"></i> Connexion
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">
                            <i class="bi bi-person-plus"></i> Inscription
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<!-- ‚úÖ FLASH MESSAGES -->
<div class="container mt-3">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<!-- ‚úÖ MAIN CONTENT -->
<main class="container my-4">
    {% block body %}{% endblock %}
</main>

<!-- ‚úÖ FOOTER -->
<footer class="bg-white border-top py-4">
    <div class="container text-center">
        <p class="text-muted mb-0">&copy; {{ "now"|date("Y") }} Gestion Produits. Tous droits r√©serv√©s.</p>
    </div>
</footer>

<!-- ‚úÖ Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
